{
	"Format": "1.19.0",
	"ConfigSchema": {
		"Town Interiors": {
			"AllowValues": "true, false",
			"Default": "true"
		},
		
		"Walls and Floors": {
			"AllowValues": "true, false",
			"Default": "true"
		},
		
		"Furniture": {
			"AllowValues": "true, false",
			"Default": "true"
		}
	},
	"Changes": [		
		// Maps		
		{
			"LogName": "Interiors",
			"Action": "EditImage",
			"Target": "Maps/bathhouse_tiles, Maps/CarolineGreenhouseTiles, Maps/CarolineGreenhouseTiles_rainy, Maps/coopTiles, Maps/ElliottHouseTiles, Maps/farmhouse_tiles, Maps/submarine_tilesheet, Maps/townInterior, Maps/townInterior_2, Maps/WitchHutTiles",
			"FromFile": "assets/{{TargetWithoutPath}}.png",
			"PatchMode": "Overlay",
			"When": {"Town Interiors": "true"}
		},
		
		{
			"LogName": "Desert Casino",
			"Action": "EditImage",
			"Target": "Maps/DesertTiles",
			"FromFile": "assets/DesertTiles_casino.png",
			"PatchMode": "Overlay",
			"When": {"Town Interiors": "true"}
		},
		
		{
			"LogName": "Walls and Floors",
			"Action": "EditImage",
			"Target": "Maps/walls_and_floors",
			"FromFile": "assets/walls_and_floors.png",
			"PatchMode": "Overlay",
			"When": {"Walls and Floors": "true"}
		},
		
		{
			"LogName": "Furniture",
			"Action": "EditImage",
			"Target": "Tilesheets/furniture, Tilesheets/furnitureFront",
			"FromFile": "assets/{{TargetWithoutPath}}.png",
			"PatchMode": "Overlay",
			"When": {"Furniture": "true"}
		},
		
		
		// Misc Fixes
		{
			"LogName": "Cursors Doors",
			"Action": "EditImage",
			"Target": "LooseSprites/Cursors",
			"FromFile": "assets/Cursors_doors.png",
			"PatchMode": "Overlay",
			"When": {"Town Interiors": "true"}
		},
		
		{
			"LogName": "English Tilesheets",
			"Action": "EditImage",
			"Target": "Maps/bathhouse_tiles, Maps/coopTiles, Maps/townInterior",
			"FromFile": "assets/{{TargetWithoutPath}}_en.png",
			"PatchMode": "Overlay",
			"When": {"Language": "en"}
		},
		
		{
			"LogName": "Seats Indoors",
			"Action": "EditImage",
			"Target": "TileSheets/ChairTiles",
			"FromFile": "assets/ChairTiles_indoors.png",
			"PatchMode": "Overlay",
			"When": {"Town Interiors": "true"}
		},
		
		{
			"LogName": "Furniture Totem",
			"Action": "EditImage",
			"Target": "Tilesheets/furniture",
			"FromFile": "assets/furniture_totem.png",
			"ToArea": {"X": 240, "Y": 640, "Width": 16, "Height": 48},
			"PatchMode": "Replace",
			"When": {"Furniture": "true"}
		}
	]
}